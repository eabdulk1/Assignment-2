<%- include('partials/above'); -%>

<div class="container p-5">
  <% if (incorrectRedirect) { %>
  <div class="alert alert-danger" role="alert">
    Incorrect username and/or password. Please try again.
  </div>
  <% } %>

  <h1 class="display-5">Secure Login</h1>
  <p class="lead">Please enter your credentials to login.</p>
  <form action="/secure/login" method="POST">
    <div class="form-group">
      <label for="username">Username</label>
      <input class="form-control" id="username" name="username" type="text" />
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input
        class="form-control"
        id="password"
        name="password"
        type="password"
      />
    </div>
    <input
      class="form-control btn text-white bg-primary"
      id="loginButton"
      type="submit"
      value="Login"
    />
  </form>
</div>

